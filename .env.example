# Smart Conditional Aid - .env.example
# Copy to .env.local for local development. Do not commit real secrets.

# Runtime
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
ALLOWED_ORIGINS=http://localhost:3000

# Blockchain / Network
CHAIN_ID=137
NETWORK=polygon-mumbai
RPC_URL=https://rpc.example.org

# Contracts (placeholders; label as test/mocks)
VOUCHER_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
RECONCILIATION_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Signing / Auth (use KMS or platform secrets in production)
SIGNER_KEY_SERVICE_URL=https://kms.example/SignEndpoint
SIGNER_KEY_ID=signer-key-id-placeholder
SIGNER_PRIVATE_KEY=placeholder_signer_private_key
SIGNER_PUBLIC_KEY=placeholder_signer_public_key
JWT_SECRET=placeholder_jwt_secret

# Demo / Feature toggles
DEMO_SEED=false
DEMO_SEED_KEY=demo-placeholder-key
FORCE_DEMO_MODE=false
FEATURE_OFFLINE_REDEEM=true

# Persistence
DATABASE_URL=postgres://user:password@localhost:5432/scaid_dev
REDIS_URL=redis://localhost:6379

# Third-party providers (placeholders)
ALCHEMY_API_KEY=your_alchemy_api_key
INFURA_PROJECT_ID=your_infura_project_id
SENTRY_DSN=
GA_MEASUREMENT_ID=

# CI / telemetry (example placeholders)
CI_ENV=github-actions
RELEASE_CHANNEL=preview
